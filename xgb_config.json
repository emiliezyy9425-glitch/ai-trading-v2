{
    "data_path": "data/historical_data_no_price.csv",
    "target_column": "decision",
    "model_path": "models/xgboost.pkl",
    "output_model_path": "models/updated_xgboost.pkl",
    "model_type": "XGBoost",
    "param_grid": {
        "n_estimators": [100, 200, 300],
        "max_depth": [3, 6, 9],
        "learning_rate": [0.01, 0.05, 0.1],
        "subsample": [0.8, 1.0],
        "colsample_bytree": [0.8, 1.0],
        "reg_alpha": [0.0, 0.1],
        "reg_lambda": [0.0, 0.1]
    },
    "cv": 5,
    "evaluation_metric": "auc",
    "preprocessing": {
        "scale_features": true
    },
    "log_file": "logs/retrain_log_xgb.txt",
    "tree_method": "gpu_hist"
}
